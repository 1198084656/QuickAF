<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp" >

        <cn.ieclipse.af.view.FlowLayout
            android:id="@+id/flowlayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="horizontal gravity:" />

            <Spinner
                android:id="@+id/spn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/horizontal_gravity" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="vertical gravity:" />

            <Spinner
                android:id="@+id/spn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/vertical_gravity" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="choice:" />

            <Spinner
                android:id="@+id/spn3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/choice_mode" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="horitontal divider:" />

            <Spinner
                android:id="@+id/spn4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/show_divider" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="vertical divider:" />

            <Spinner
                android:id="@+id/spn5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/show_divider" />
        </cn.ieclipse.af.view.FlowLayout>

        <cn.ieclipse.af.view.FlowLayout
            android:id="@+id/flowlayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#f0f0f0"
            android:divider="@android:color/holo_red_dark"
            android:dividerHeight="1px"
            android:gravity="center"
            android:horizontalSpacing="0dp"
            android:numColumns="3"
            android:showDividers="middle|beginning|end"
            android:verticalSpacing="0dp"
            app:fl_vDivider="@android:color/holo_blue_dark"
            app:fl_vDividerHeight="1px" >

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#cecece"
                android:text="Yellow" />

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#cecece"
                android:text="Orange" />

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#cecece"
                android:text="Blue_Light" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#cecece"
                android:text="Gray" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#cecece"
                android:text="Pink" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#cecece"
                android:text="Green" />
        </cn.ieclipse.af.view.FlowLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Grid Ratio" />

            <EditText
                android:id="@+id/et_ratio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal" />
        </LinearLayout>

        <cn.ieclipse.af.view.FlowLayout
            android:id="@+id/flowlayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:numColumns="3"
            app:fl_gridRatio="1"
            app:fl_hDivider="#ff0000"
            app:fl_hDividerShow="beginning|middle|end"
            app:fl_hDividerWidth="1px"
            app:fl_vDivider="#ff0000"
            app:fl_vDividerHeight="1px"
            app:fl_vDividerShow="beginning|middle|end" >

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yellow" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Orange" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Blue_Light" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gray" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pink" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Green" />
        </cn.ieclipse.af.view.FlowLayout>
    </LinearLayout>

</ScrollView>