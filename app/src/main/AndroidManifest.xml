<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.ieclipse.af.demo"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="23" />
    
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- recycler view -->
        <activity android:name=".recyclerview.SimpleListActivity" />

        <!-- custom view -->
        <activity android:name=".cview.FlowLayoutActivity" />
        <activity android:name=".cview.TitleBarActivity" />
        <activity android:name=".cview.RoundButtonActivity" />

        <!-- volley -->
        <activity android:name=".volley.weather.WeatherActivity" />
        
        <!-- common ui -->
        <activity android:name=".ui.DialogsActivity"/>
    </application>

</manifest>